{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gilga",
  "version": "0.1.0",
  "identifier": "com.gilga.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Gilga",
        "width": 400,
        "height": 600,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "resizable": true
      }
    ],
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.ico",
      "tooltip": "Gilga"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
